<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesterCanvas">


    <!-- This is a new version of the toolbar for a java implementation of the canvas -->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/appbar_container2"
            android:name="com.example.teamdolphin.ToolbarFragment"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_toolbar"
            tools:layout_editor_absoluteX="-4dp" />

        <View
            android:id="@+id/colored_bar6"
            android:layout_width="420dp"
            android:layout_height="2dp"
            android:background="#959595"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/colored_bar"
            app:layout_constraintVertical_bias="0.181" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAAAAA">

            <ImageButton
                android:id="@+id/button_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/undo_icon"
                android:text="Undo" />

            <ImageButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/save_icon"
                android:text="Save" />

            <ImageButton
                android:id="@+id/button_brush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/brush_24"
                android:text="Stroke" />

            <ImageButton
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/menu_icon"
                android:text="Stroke" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CanvasUIRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAAAAA"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/button_eraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/eraser_icon"
                android:text="Undo"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/color_picker_icon"
                android:text="Color Picker"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_pen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/pen_icon"
                android:text="Stroke"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_eyedropper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/eyedropper_icon"
                android:text="Stroke"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CanvasUIRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAAAAA"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/button_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/select_icon"
                android:text="Undo"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_paintbucket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/paintbucket_icon"
                android:text="Save"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/shapes_icon"
                android:text="Stroke"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_colorpreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/color_preview_icon"
                android:text="Stroke"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/button_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/home_icon"
                android:text="Stroke"
                android:visibility="gone"/>
        </LinearLayout>


        <!-- Size Slider for the Brush Tool -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <com.example.teamdolphin.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        android:layout_centerInParent="true" />

</RelativeLayout>