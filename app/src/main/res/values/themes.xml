<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamDolphin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primaryLight</item>
        <item name="colorPrimaryVariant">@color/color_green</item>
        <item name="colorOnPrimary">@color/color_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondaryLight</item>
        <item name="colorSecondaryVariant">@color/color_green</item>
        <item name="colorOnSecondary">@color/color_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/color_secondaryLight</item>
        <item name="backgroundColor">@color/color_primaryLight</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>